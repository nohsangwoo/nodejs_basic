  <body>
    <!-- include방식이 ejs3에서 변경됨 -->
    <%- include('nav') %>

    <h1>check images</h1>
    <div><% files[0] %></div>
    <article>
      <ul class="list-group">
        <% files.forEach((file,index)=>{ %>
        <li
          style="
            padding: 10px;
            border-radius: 10px;
            border: 1px solid black;
            margin-bottom: 10px;
          "
          class="p-4 mb-5 list-group-item"
        >
          <img
            src="../public/image/<%= file %>"
            alt="image-<%= file %>"
            class="image-<%= file %>"
          />

          <p>file name: <%= file %></p>
        </li>
      </ul>

      <% }) %>
    </article>

    <!-- <img src="" alt="" id="Images" /> -->
